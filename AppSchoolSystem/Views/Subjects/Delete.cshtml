@model AppSchoolSystem.Models.Subject

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8">
    <h3>Delete Data Subjects</h3>
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Are you sure you want to delete this Subjects?</h3>
        </div><!-- /.box-header -->
        <div>

            <dl class="dl-horizontal">
                <dt>
                    ID Mata Pelajaran
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubjectID)
                </dd>

                <dt>
                    ID Guru
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TeacherID)
                </dd>

                <dt>
                   Kurikulum
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Curriculum)
                </dd>

                <dt>
                    Nilai KKM
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PassMark)
                </dd>

            </dl>

            <div class="box-header with-border">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" value="Delete" class="btn btn-info pull-right" style="width: 78px">Delete</button>
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info", @style = "width: 78px" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>