@model AppSchoolSystem.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-8">
    <h3>Delete Data Students</h3>
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Are you sure you want to delete this Student?</h3>
        </div><!-- /.box-header -->
        <div>

            <dl class="dl-horizontal">
                <dt>
                  Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Kelas
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Grade)
                </dd>

                <dt>
                    Tanggal Lahir
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>

                <dt>
                    Jenis Kelamin
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Gender)
                </dd>

            </dl>

            <div class="box-header with-border">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" value="Delete" class="btn btn-info pull-right" style="width: 78px">Delete</button>        
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-info", @style = "width: 78px" })
                    </div>
                }
                </div>
            </div>
    </div>
</div>