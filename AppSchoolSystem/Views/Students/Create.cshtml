@model AppSchoolSystem.Models.Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Form Create New Students</h3>
        </div><!-- /.box-header -->

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="exampleInputEmail1">NIS</label>
                    @Html.EditorFor(model => model.StudentID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nomor Induk Siswa" } })
                    @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nama</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nama Siswa" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Kelas</label>
                    @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kelas" } })
                    @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tanggal Lahir</label>
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tanggal Lahir (dd/mm/yyyy)" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Jenis Kelamin</label>
                    @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @placeholder = "Jenis Kelamin" } })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-right">Save</button>
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-block btn-info btn-sm", @style = "width: 78px" })

                    </div><!-- /.box-footer -->
                </div>
            </div>
        }
    </div><!-- /.box -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
