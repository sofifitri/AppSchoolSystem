@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Form Create New Students</h3>
        </div><!-- /.box-header -->
        @using (Html.BeginForm("Save", "Students", FormMethod.Post, new { role = "form", id = "saveForm" }))
        {
            @*here role = "form" for bootstrap design (optional) *@
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">NIS</label>
                    <input type="text" id="nis" name="nis" placeholder="Enter NIS" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nama</label>
                    <input type="text" id="nama" name="nama" placeholder="Enter your full name" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Kelas</label>
                    <input type="text" id="kelas" name="kelas" placeholder="Enter Kelas" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Jenis Kelamin</label>
                    <input type="text" id="jk" name="jk" placeholder="Enter your JK" />
                </div>
                <div class="form-group">
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-right">Save</button>
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-block btn-info btn-sm", @style = "width: 78px" })

                    </div><!-- /.box-footer -->
                </div>
            </div>
        }
</div><!-- /.box -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
